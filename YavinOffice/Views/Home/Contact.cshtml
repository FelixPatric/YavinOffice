@model SiteVisitorInfor

<!-------Contact Section Begins Here------------>
<section id="contact" class="contact my-6 position-relative">
    <img src="~/content/images/decoration-star.svg" alt="" class="decoration-star position-absolute">
    <div class="container position-relative z-3">
        <div class="row">
            <div class="col-lg-6 d-none d-md-block">
                <div class="image-container">
                    <img src="~/content/images/contact.png" alt="" class="img-fluid">
                </div>
            </div>
            <div class="col-lg-6">
                <div class="text-container">
                    <h2>Contact Us For A Quote</h2>
                    <form method="post" asp-action="Contact">
                        <div class="mb-3">
                            <input type="text" asp-for="Name" class="form-control" placeholder="Enter Name">
                        </div>
                        <div class="mb-3">
                            <input type="email" asp-for="Email" class="form-control" placeholder="Enter Email">
                        </div>
                        <div class="mb-3">
                            <input type="number" asp-for="PhoneNumber" class="form-control" placeholder="Enter Phone Number">
                        </div>
                        <div class="mb-3">
                            <textarea class="form-control" asp-for="Message" placeholder="Enter Message" rows="8"></textarea>
                        </div>
                        <div class="d-grid gap-2">
                            <input type="submit" value="Send" class="btn btn-primary btn-block">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<!-------Contact Section Ends Here--------------->